    <input type="button" onclick="validate(this.form)" value="submit">
  </form>

  <script>
   let show=true;
    function showError(container, errorMessage) {
     this.show=false;
      container.className = 'error';
      var msgElem = document.createElement('div');
      msgElem.className = "error-message";
      msgElem.innerHTML = errorMessage;
      container.appendChild(msgElem);
    }

    function resetError(container) {
     
      container.className = '';
      if (container.lastChild.className == "error-message") {
      
        container.removeChild(container.lastChild);
      }
    }

    function validate(form) {
      var elems = form.elements;
//firstName
      resetError(elems.from.parentNode);
      if (!elems.from.value) {
         
        showError(elems.from.parentNode, ' Введіть своє ім\'я');
      }
     else  if (!elems.from.value.indexOf("та")) {
        showError(elems.from.parentNode, ' Символ "та" не дозволено');
      }else{this.show=true;}
      
      //LastName
      resetError(elems.from1.parentNode);
      if (!elems.from1.value) {
        showError(elems.from1.parentNode, ' Введіть своє прізвище');
      }
     else  if (!elems.from1.value.indexOf("та")) {
        showError(elems.from1.parentNode, ' Символ "та" не дозволено');
      }else{this.show=true;}
//Date
 resetError(elems.date.parentNode);

      if (!elems.date.value) {
        showError(elems.date.parentNode, ' Вкажіть дату народження');
      }else{this.show=true;}
      
      //radio
    
    
    //country
     resetError(elems.country.parentNode);
      if (!elems.country.value) {
        showError(elems.country.parentNode, ' Виберіть країну');
      }else{this.show=true;}
     
    
    //email
    resetError(elems.email.parentNode);
      if (!elems.email.value) {
        showError(elems.email.parentNode, ' Вкажіть електронну адресу');
      }  
      
      else  if (elems.email.value.indexOf("")) {
        showError(elems.email.parentNode, ' Username musn t have letters та.');
      }else{this.show=true;}
    

//Pass
      resetError(elems.password.parentNode);
      if (!elems.password.value) {
        
        showError(elems.password.parentNode, ' Вкажіть пароль');
      } else{this.show=true;}
      
      resetError(elems.from1.parentNode);
      if (!elems.from1.value) {
        showError(elems.from1.parentNode, 'Вкажіть адресу');
      }
     else  if (!elems.from1.value.indexOf("та")) {
        showError(elems.address.parentNode, 'Символ "та" не дозволено');
      }else{this.show=true;}
      if(this.show){
     alert("!!!")}
    }
  </script>

